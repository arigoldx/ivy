<h2>courses</h2>

<%= link_to '[new course]', new_course_path %><br>
<br>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Section</th>
      <th>Grade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.section %></td>
        <td><%= course.grade %></td>
        <td><%= link_to '[show]', course %></td>
        <td><%= link_to '[edit]', edit_course_path(course) %></td>
        <td><%= link_to '[delete]', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
