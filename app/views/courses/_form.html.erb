<%= form_for(@course, html: { class: 'form-horizontal' }) do |f| %>
  <% if @course.errors.any? %>
    <div id="error_explanation">
      <h2>
		<%= pluralize(@course.errors.count, "error") %>
		prohibited this course from being saved:
	  </h2>
      <ul>
		<% @course.errors.full_messages.each do |message| %>
          <li><%= message %></li>
		<% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
	<div class="col-sm-2"><%= f.label "name" %></div>
	<div class="col-sm-10"><%= f.text_field :name %></div>
  </div>
  <div class="form-group">
	<div class="col-sm-2"><%= f.label "section" %></div>
	<div class="col-sm-10"><%= f.text_field :section %></div>
  </div>
  <div class="form-group">
	<div class="col-sm-2"><%= f.label "grade" %></div>
	<div class="col-sm-10"><%= f.number_field :grade %></div>
  </div>
  <div class="actions"><%= f.submit %></div>
<% end %>
